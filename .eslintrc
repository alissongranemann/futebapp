{
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    //"extends": ["eslint:recommended"],
    "extends": [
        "airbnb-base"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "react/jsx-indent": [
            "error",
            4
        ]
        //"max-len": [1, 70, 2, {ignoreComments: true}],
        //"prop-types": [2]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": [
                    "src/main/js"
                ]
            }
        }
    }
}