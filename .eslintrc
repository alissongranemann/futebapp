{
    "env" : {
        "browser": true
    },
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "extends": [
        "airbnb-base",
        "plugin:react/recommended"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "import/no-named-as-default": 0,
        "react/prop-types": 0, // TODO
        "react/no-find-dom-node": 0
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": [
                    "src/main/js"
                ]
            }
        },
        "react": {
            "createClass": "createReactClass", 
            "pragma": "React",
            "version": "16.4.2"
        }
    }
}